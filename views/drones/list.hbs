<h2>Available drones</h2>

{{#each drones}}
<ul>
    <li>{{this.name}}</li>
    <li>{{this.propellers}}</li>
    <li>{{this.maxSpeed}}</li>
    <li><a href="/drones/{{this._id}}/edit">Edit Drone</a></li>
    <form action="/drones/{{this._id}}/delete" method="POST">
        <button>Delete Drone</button>
    </form>
</ul>
{{/each}}